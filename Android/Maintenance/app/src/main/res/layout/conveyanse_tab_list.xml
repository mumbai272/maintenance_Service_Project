<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#F2F2F2"
    android:padding="8dp"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/li_part"
        android:gravity="left"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#00134D"
        android:textAlignment="gravity"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="By"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#00134D"
        android:layout_marginRight="5dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/li_part"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/by"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/black_color"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/li_part"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12dp"
        android:textColor="#00FFBF"
        android:textStyle="bold"
        android:id="@+id/li_amount"
        android:layout_alignEnd="@+id/li_part"
        android:layout_below="@+id/li_part" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="On"
        android:textStyle="bold"
        android:textColor="#00134D"
        android:textSize="12dp"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/delete"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/date_on"
        android:textSize="12dp"
        android:textColor="@color/black_color"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/by" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/delete"
        android:visibility="invisible"
        android:background="#F2F2F2"
        android:textSize="12dp"
        android:drawableLeft="@drawable/delete"
        android:layout_below="@+id/li_amount"
        android:layout_alignStart="@+id/li_amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rs "
        android:textColor="#00FFBF"
        android:textStyle="bold"
        android:textSize="12dp"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/li_amount"
        android:layout_alignBottom="@+id/li_amount"
        android:layout_toStartOf="@+id/li_amount" />


</RelativeLayout>