<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#F2F2F2"
    android:padding="8dp"
    android:weightSum="1">

  <!-- <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Claim Titile"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black_color"
        android:id="@+id/li_part" />-->

       <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/li_part"
            android:gravity="left"
           android:textStyle="bold"
           android:textColor="#00134D"
            android:textAlignment="gravity"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/li_amount"
            android:textColor="#00FFBF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignTop="@+id/li_part"
            android:layout_toEndOf="@+id/li_part" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:id="@+id/textView4"
            android:textColor="#00134D"
            android:layout_below="@+id/li_part"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/li_start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To"
            android:textStyle="bold"
            android:id="@+id/textView6"
            android:textColor="#00134D"
            android:layout_marginEnd="40dp"
            android:layout_alignTop="@+id/li_start"
            android:layout_toStartOf="@+id/li_amount" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/li_end"
            android:textColor="@color/black_color"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rs "
        android:textColor="#00FFBF"
        android:textStyle="bold"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/li_part"
        android:layout_alignEnd="@+id/li_part" />


</RelativeLayout>