<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/rel_charge"
        android:visibility="invisible"
        android:background="#F2F2F2"
        android:padding="8dp"
        android:weightSum="1">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/invoiceNo"
            android:textStyle="bold"
            android:textColor="#00134D"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/invoiceDate"
            android:textStyle="bold"
            android:textColor="#00134D"
            android:layout_alignTop="@+id/invoiceNo"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tax Type"
            android:textStyle="bold"
            android:textColor="#00134D"
            android:id="@+id/textView36"
            android:layout_below="@+id/invoiceNo"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tax_type"
            android:textStyle="bold"
            android:textColor="#00134D"
            android:layout_alignTop="@+id/textView36"
            android:layout_alignEnd="@+id/spareTaxType"
            android:layout_alignStart="@+id/spareTaxType" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Spare Tax Type"
            android:id="@+id/textView41"
            android:textStyle="bold"
            android:textColor="#00134D"
            android:layout_below="@+id/textView36"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/spareTaxType"
            android:textStyle="bold"
            android:textColor="#00134D"
            android:layout_alignTop="@+id/textView41"
            android:layout_alignStart="@+id/grandtotal"
            android:layout_alignEnd="@+id/grandtotal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_charge"
            android:src="@drawable/delete"
            android:layout_below="@+id/tax_type"
            android:layout_alignEnd="@+id/invoiceDate"
            android:layout_marginEnd="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Grand Total"
            android:textStyle="bold"
            android:textColor="#00134D"
            android:id="@+id/textView40"
            android:layout_below="@+id/textView41"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/grandtotal"
            android:textStyle="bold"
            android:textColor="#00134D"
            android:layout_below="@+id/textView41"
            android:layout_toEndOf="@+id/textView41" />

    </RelativeLayout>



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:id="@+id/add_charge"
        android:clickable="true"
        android:src="@drawable/plus"
        android:background="@drawable/oval"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
