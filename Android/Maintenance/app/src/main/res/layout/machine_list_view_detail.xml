<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/asset"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/relativeLayout"
        android:layout_alignTop="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="@color/button_color"
            android:id="@+id/machine_title"
            android:textStyle="bold"
            android:layout_above="@+id/machine_address"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:textColor="#a8a8a8"
            android:id="@+id/machine_address"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2" />

        <Button
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="Log"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/themify_e6c8_32"
            android:id="@+id/log"
            android:layout_marginRight="5dp"
            android:paddingRight="15dp"
            android:textColor="@color/button_color"
            android:background="@color/light_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/delete"
            android:layout_toStartOf="@+id/delete" />

        <Button
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="Detete"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/delete"
            android:id="@+id/delete"
            android:textColor="@color/button_color"
            android:background="@color/light_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>