<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Advance Paid"
        android:textColor="@color/black_color"
        android:id="@+id/textView15"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance Amount"
        android:textColor="@color/black_color"
        android:id="@+id/textView16"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pay Details"
        android:id="@+id/textView17"
        android:textColor="@color/black_color"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pay Amount"
        android:id="@+id/textView18"
        android:textColor="@color/black_color"
        android:layout_above="@+id/adv_paid"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Finacial Approval"
        android:id="@+id/textView19"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_color"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/adv_paid"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView16" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pay_details"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toEndOf="@+id/textView16" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pay_amt"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignStart="@+id/pay_details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bal_amt"
        android:textAlignment="center"
        android:textColor="@color/black_color"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignEnd="@+id/pay_details"
        android:layout_toEndOf="@+id/textView16" />

</RelativeLayout>