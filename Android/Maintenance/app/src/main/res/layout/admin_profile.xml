<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/profile_nametxt"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Company"
        android:id="@+id/profile_companytxt"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/profile_nametxt"
        android:layout_alignStart="@+id/profile_nametxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/profile_addresstxt"
        android:layout_below="@+id/profile_companytxt"
        android:layout_alignStart="@+id/profile_companytxt"
        android:layout_marginTop="65dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_name"
        android:layout_alignBottom="@+id/profile_nametxt"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_company"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/profile_addresstxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_address"
        android:layout_alignBottom="@+id/profile_addresstxt"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/update_profile_btn"
        android:layout_marginTop="102dp"
        android:layout_below="@+id/profile_address"
        android:layout_centerHorizontal="true" />


</RelativeLayout>