<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#F2F2F2"
    android:padding="8dp"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/delete"
        android:layout_toStartOf="@+id/delete"
        android:id="@+id/part"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#00134D"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/delete"
        android:background="#F2F2F2"
        android:textSize="12dp"
        android:drawableLeft="@drawable/delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="On"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#00134D"
        android:layout_below="@+id/part"
        android:layout_alignParentStart="true"
        android:id="@+id/tex" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/exp_on"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/black_color"
        android:layout_below="@+id/part"
        android:layout_toEndOf="@+id/tex"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rs "
        android:textColor="#00FFBF"
        android:textStyle="bold"
        android:textSize="12dp"
        android:id="@+id/textView12"
        android:layout_marginEnd="47dp"
        android:layout_below="@+id/part"
        android:layout_toStartOf="@+id/delete" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/amount"
        android:textSize="12dp"
        android:textColor="#00FFBF"
        android:textStyle="bold"
        android:layout_below="@+id/part"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Billed On"
        android:textStyle="bold"
        android:textColor="#00134D"
        android:layout_marginRight="5dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/tex"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/billed_on"
        android:textSize="12dp"
        android:textColor="@color/black_color"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignEnd="@+id/exp_on" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bill No"
        android:textStyle="bold"
        android:textColor="#00134D"
        android:layout_marginRight="5dp"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/billed_on"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bill_no"
        android:textSize="12dp"
        android:textColor="@color/black_color"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView14" />

</RelativeLayout>